        'airport_name'=>array(
            'label' => 'Autocomplete Name Widget',
            'field types' => array('airport_field'),
        ),
        'airport_name_code' => array(
            'label' => 'Autocmplete both code and name Widget',
            'field types' => array('airport_field'),
        ),
    );

}

